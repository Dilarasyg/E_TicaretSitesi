@model ETicaret.Models.Uye
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<!-- Register -->

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header text-center d-block">
            <h5 class="modal-title">Üye Ol</h5>

        </div>
        <div class="modal-body">
        <form asp-controller="UserLogin" asp-action="Register">
                <div class="floating-form mb-3">
                    <input type="text" asp-for="Adi" class="form-control" id="fullname" autocomplete="off" required />
                    <label for="fullname">Kullanıcı Adı</label>
                </div>
                <div class="floating-form mb-3">
                    <input type="text" asp-for="Soyadi" class="form-control" id="fullname" autocomplete="off" required />
                    <label for="fullname">Kullanıcı Soyadı</label>
                </div>
                <div class="floating-form mb-3">
                    <input type="email"  asp-for="Email"class="form-control" id="email" autocomplete="off" required />
                    <label for="email">E-posta</label>
                </div>
                <div class="floating-form">
                    <input type="password"  asp-for="Sifre" class="form-control" id="password" autocomplete="off" required />
                    <label for="r-password">Şifre</label>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-orange w-100" value="Register">Üye Ol</button>
                   @* <button type="button" class="btn btn-sm btn-orange outline w-100" data-bs-dismiss="modal">Vazgeç</button>*@
                    <div class="mt-3">
                        Zaten bir Hesabım var.
                        <a asp-action="Login" asp-controller="UserLogin"><b>Giriş Yap</b></a>

                    </div>
        </form>
        </div>

     
    </div>
</div>


