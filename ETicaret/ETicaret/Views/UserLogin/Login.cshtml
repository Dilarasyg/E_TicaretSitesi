@model ETicaret.Models.Uye
@{
	ViewData["Title"] = "Login";
	Layout = "_Layout";
}
<!-- Login  -->

<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header text-center d-block">
			<h5 class="modal-title">Giriş Yap</h5>

		</div>
		<form asp-controller="UserLogin" asp-action="Login" method="post">
			<div class="modal-body">
				<div class="floating-form mb-3">
					<input type="email" asp-for="Email" class="form-control" id="username" autocomplete="off" required />
					<label for="username">E-posta</label>
				</div>
				<div class="floating-form">
					<input type="password" asp-for="Sifre" class="form-control" id="name" autocomplete="off" required />
					<label for="name">Şifre</label>
				</div>
				<div class="text-end">
					<a href="#" class="text-end"><small>Şifremi Unuttum.</small></a>
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-sm btn-orange w-100">
					Giriş Yap
					<a asp-action="Index" asp-controller="Home"></a>
				</button>
			
				<button type="button" class="btn btn-sm btn-orange outline w-100" data-bs-dismiss="modal">Vazgeç</button>
				<div class="mt-3">
					Hesabın yok mu?
					<a asp-action="Register" asp-controller="UserLogin"><b>Hesap Oluştur</b></a>

				</div>
			</div>
		</form>

	</div>
</div>

